<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/patientImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="@color/baseItemColor"
        app:civ_border_width="2dp"
        app:civ_shadow="false"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10dp" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Юлия Пасс"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/patientTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:text="#апатия #стресс #отсутствие концентрации #осутствие мотивации" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="64dp"
        android:background="@color/itemBackgroundColorSecondary" />

    <TextView
        android:id="@+id/patientDiaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/ubuntu"
        android:paddingVertical="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Мой дневник"
        android:textColor="@color/primaryTextColor"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:background="@color/itemBackgroundColorSecondary" />

    <TextView
        android:id="@+id/patientEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="16dp"
        android:fontFamily="@font/ubuntu"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Изменить профиль"
        android:textColor="@color/primaryTextColor"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:background="@color/itemBackgroundColorSecondary" />

    <TextView
        android:id="@+id/patientExitAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingVertical="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="Выйти из аккаунта"
        android:textColor="@color/primaryTextColor"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@color/itemBackgroundColorSecondary" />
</LinearLayout>