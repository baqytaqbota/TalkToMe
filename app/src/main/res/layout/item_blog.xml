<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blogItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/blogImageView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qwerty" />

        <TextView
            android:id="@+id/blogTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blogImageView"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu_bold"
            android:maxLines="2"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            tools:text="Титулка блога" />

        <TextView
            android:id="@+id/blogAuthorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blogTitleView"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            tools:text="автор блога" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>